//Using if â€“ else Statements
#include<stdio.h>

int main ()
{
  int num1, num2;
  num1=12,num2=13;

  if (num1 == num2)
    printf("both are equal");
  else if (num1 > num2) 
    printf("%d is greater", num1);
  else
    printf("%d is greater", num2);

  return 0;
}



//Using Ternary Operator
#include <stdio.h>
int main2 ()
{
    int num3, num4, temp;
    
    num3=20,num4=30;
    if(num3 == num4)
        printf("Both are Equal\n");
    else{
        temp = num3 > num4? num3 : num4;
        printf("%d is largest",temp);
    }

  return 0;
}
